#!/bin/bash

OS_name=$1
## chech which command & install
check_which=`which 2> /tmp/chk_req.out`

        if [[ `(grep "not found" /tmp/chk_req.out )` != ""  ]] ; then
		case $OS_name in
			RHEL)
				$sudo_base yum install which -y ;;
			Ubuntu) 
				$sudo_base apt-get install which -y ;;
		esac
	## clear tmp file
	rm -f  /tmp/chk_req.out
        fi
